{
  "watch": {
    "wasm": {
      "patterns": [
        "src",
        "Cargo.toml"
      ],
      "extensions": "rs,wgsl",
      "delay": 2500
    }
  },
  "scripts": {
    "prewasm": "cargo check --target wasm32-unknown-unknown",
    "wasm": "wasm-pack build --target web",
    "print-ok": "echo. && echo. && echo. && echo           Ok && echo. && echo.",
    "postwasm": "npm run print-ok --silent",
    "watch": "npm-watch wasm"
  },
  "dependencies": {
    "express": "^4.18.2",
    "npm-watch": "^0.11.0",
    "socket.io": "^4.5.4"
  }
}
